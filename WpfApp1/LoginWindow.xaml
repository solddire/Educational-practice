<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Label x:Name="login" Content="Введите логин:" HorizontalAlignment="Left" Margin="225,131,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="Password" Content="Введите пароль:" HorizontalAlignment="Left" Margin="216,188,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Left" Margin="351,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordField" HorizontalAlignment="Left" Margin="351,193,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Вход" HorizontalAlignment="Left" Margin="273,266,0,0" VerticalAlignment="Top" FontSize="14" Width="86" Click="LoginButton_Click"/>
        <Button x:Name="RegistrationButton" Content="Регистрация" HorizontalAlignment="Left" Margin="390,266,0,0" VerticalAlignment="Top" FontSize="14" Width="101" Click="regin_Click"/>

    </Grid>
</Window>
